<style>
  .proyectos__heading {
    font-size: 3.6rem;
    text-align: center;
    margin: 5rem 0;
  }

  .proyectos__grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
  }

  @media (min-width: 768px) {
    .proyectos__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .proyectos a {
    display: block;
    font-size: 1.8rem;
    padding: 1rem;
    background-color: #000;
    color: white;
    border: 1px solid #fff;
    text-align: center;
    margin: 2rem auto;
    width: 80%;
    font-weight: bold;
    border-radius: 1rem;
    transition: all 0.3s ease-in-out;
  }
  .proyectos a:hover {
    background-color: #fff;
    color: #000;
  }
  .stack {
    margin-top: 1rem;
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .stack__icon {
    height: 2.5rem;
  }
</style>
