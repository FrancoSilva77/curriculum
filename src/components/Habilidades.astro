    <img
      class="habilidad__imagen"
      src="/img/tools/html.svg"
      alt="Icono html"
    />
    <img
      class="habilidad__imagen"
      src="/img/tools/css.svg"
      alt="Icono css"
    />
    <img
      class="habilidad__imagen"
      src="/img/tools/sass.svg"
      alt="Icono sass"
    />
    <img
      class="habilidad__imagen"
      src="/img/tools/js.svg"
      alt="Icono js"
    />
    <img
      class="habilidad__imagen"
      src="/img/tools/php.svg"
      alt="Icono php"
    />
    <img
      class="habilidad__imagen"
      src="/img/tools/laravel.svg"
      alt="Icono laravel"
    />
    <img
      class="habilidad__imagen"
      src="/img/tools/react.svg"
      alt="Icono react"
    />
    <img
      class="habilidad__imagen"
      src="/img/tools/vue.svg"
      alt="Icono vue"
    />
    <img
      class="habilidad__imagen"
      src="/img/tools/node.svg"
      alt="Icono node"
    />
    <img
      class="habilidad__imagen"
      src="/img/tools/mysql.svg"
      alt="Icono mysql"
    />
    <img
      class="habilidad__imagen"
      src="/img/tools/git.svg"
      alt="Icono git"
