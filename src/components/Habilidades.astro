<style>
  .habilidades {
    margin-top: 5rem;
  }
  
  .habilidades__heading {
    font-size: 3.6rem;
    text-align: center;
    margin: 3rem 0 5rem 0;
  }

  .habilidades__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    place-items: center;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .habilidades__grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 2rem;
    }
  }

  .habilidad__imagen {
    width: 7rem;
  }
</style>
